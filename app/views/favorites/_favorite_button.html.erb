<% if current_user.favorite_microposts(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(user_id: micropost.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :user_id, micropost.id %>
      <%= f.submit 'お気に入り取消', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :user_id, micropost.id %>
      <%= f.submit 'お気に入り', class: 'btn btn-primary btn-block' %>
    <% end %>
<% end %>

<ul class="list-unstyled">
  <% likes.each do |like| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(like.user, { size: 50 }) %>" alt="">
      <div class="media-body">
          
        <div>
          <%= link_to like.user.name, user_path(like.user) %> <span class="text-muted">posted at <%= like.created_at %></span>
        </div>
        
        <div>
          <p class="mb-0"><%= like.content %></p>
        </div>
        
        <div class="media-body" >
          
          <% if current_user == like.user %>
            <%= link_to "Delete", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        
          <% if current_user.favorite_exist?(like) %>
            <%= form_with(model: current_user.favorites.find_by(like_id: like.id), local: true, method: :delete) do |f| %>
            <%= hidden_field_tag :like_id, like.id %>
            <%= f.submit 'お気に入り取消', class: 'btn btn-secondary btn-sm' %>
          <% end %>
            
            <% else %>
            <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
            <%= hidden_field_tag :like_id, like.id %>
            <%= f.submit 'お気に入り追加', class: 'btn btn-info btn-sm' %>
            <% end %>
          <% end %>
         </div>
      </div>
    </li>
  <% end %>
  <%= paginate likes %>